{
  "name": "valtio-persist",
  "version": "1.0.1",
  "description": "Flexible and performant saving of state to disk.",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "test": "jest --config jestconfig.json",
    "build": "tsc",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Noitidart/valtio-persist.git"
  },
  "keywords": [
    "valtio",
    "disk",
    "persist",
    "save",
    "file"
  ],
  "author": "Noitidart",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Noitidart/valtio-persist/issues"
  },
  "homepage": "https://github.com/Noitidart/valtio-persist#readme",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "jest": "^27.3.1",
    "prettier": "^2.4.1",
    "ts-jest": "^27.0.7",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.4"
  }
}
